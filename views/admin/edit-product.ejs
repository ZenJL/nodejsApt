<%- include('../../includes/head.ejs') %>
</head>
<body class="vh-100 d-flex flex-column">
  <% include('../../includes/navigation.ejs') %>

  <main class="flex-grow-1 d-flex flex-column container">
    <form
      action="/admin/edit-product"
      method="POST"
      style="max-width: 330px"
      class="m-auto"
      enctype="multipart/form-data"
    >
      <input name="imageUrl" value="<%= product.imageUrl %>" type="hidden" />
      <input name="productId" value="<%= product.id %>" type="hidden" />

      <input type="file" name="image" class="form-control mb-3">

      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control mb-3"
        value="<%= product.title %>"
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" inputmode="numeric" name="price" id="product-price"  class="form-control mb-3" 
        placeholder="Price"
        value="<%= product.price %>"
        />
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea type="text" name="description" class="form-control mb-3" 
        placeholder="Description"
        > <%= product.description %></textarea>
      </div>

      <button
        type="submit"
        class="btn btn-primary w-100"
      >
        Update product
      </button>
    </form>
  </main>

<%- include('../../includes/footer.ejs') %>
